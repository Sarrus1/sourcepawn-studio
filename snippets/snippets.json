{
  "for loop": {
    "prefix": "for",
    "body": [
      "for(int ${1|i,iClient,current_client|} = ${2:0}; $1 <= ${3:MaxClients}; $1++)",
      "{",
      "\t${4:}",
      "}"
    ],
    "description": "for loop"
  },

  "while loop": {
    "prefix": "while",
    "body": ["while(${1:})", "{", "\t${2:}", "}"]
  },

  "do while loop": {
    "prefix": "do",
    "body": ["do", "{", "\t${2:}", "}", "while(${1:})"]
  },

  "if statement": {
    "prefix": "if",
    "body": ["if(${1:})", "{", "\t${2:}", "}"],
    "description": "if statement"
  },

  "else statement": {
    "prefix": "else",
    "body": ["else", "{", "\t${1:}", "}"],
    "description": "else statement"
  },

  "if else statement": {
    "prefix": "else if",
    "body": ["else if(${1:})", "{", "\t${2:}", "}"],
    "description": "else if statement"
  },

  "include statement": {
    "prefix": "#include",
    "body": ["#include "],
    "description": "include"
  },

  "pragma": {
    "prefix": "#pragma",
    "body": [
      "#pragma ${1|newdecls required,semicolon 1,tabsize,ctrlchar,deprecated,dynamic,rational,unused|}"
    ],
    "description": "pragma"
  },

  "define": {
    "prefix": "#define",
    "body": ["#define ${1:define name} ${2:define value}"],
    "description": "define"
  },

